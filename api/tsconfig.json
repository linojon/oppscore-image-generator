{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2021",  // Changed to ES2021 for newer features like Awaited
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "skipLibCheck": true,  // Added to avoid type checking third-party libraries
    "forceConsistentCasingInFileNames": true  // Ensures file name consistency
  },
  "include": ["./"]
}
